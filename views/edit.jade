extends layouth

block content
	.h1.text-center Редактирование договора
	form.addForm(method='post' action='/rest/save' autocomplete='off' enctype='multipart/form-data')
		input(id='currId' type='hidden' name='_id' value=_i)
		.form-group.ots
			label(for='done') Наличие договора
			input.form-control#done(list='dns' name='done' value=d)
			datalist#dns
				option(value='да')
				option(value='нет')
		.form-group.ots
			label(for='pact_id') Номер регистрации
			input.form-control#pact_id(type='text' name='pact_id' value=pid required)
		.form-group.ots
			label(for='branch') Отдел
			input.form-control#branch(list='branches' name='branch' value=br)
			datalist#branches
				each el in deps
					option(value=el)
		.form-group.ots
			label(for='partner_id') Номер контрагента
			input.form-control#partner_id(type='text' name='partner_id' value=id)
		.form-group.ots
			label(for='date1') Дата регистрации
			input.form-control#date1(type='date' name='reg' value=re)
		.form-group.ots
			label(for='date2') Дата заключения
			input.form-control#date2(type='date' name='close' value=cl)
		.form-group.ots
			label(for='partner') Контрагент
			input.form-control#partner(list='partners' name='partner' value=pa)
			datalist#partners
				each el in parts
					option(value=el)
		.form-group.ots
			label(for='theme') Предмет договора
			input.form-control#theme(type='text' name='theme' value=th)
		.form-group.ots
			label(for='amount') Сумма с ндс.
			input.form-control#amount(type='text' name='amount' value=am)
		.form-group.ots
			label(for='curr') Валюта
			input.form-control#curr(list='currs' name='curr' value=cu)
			datalist#currs
				option(value='UAH')
				option(value='USD')
				option(value='RUR')
				option(value='EUR')
		.form-group.ots
			label(for='date') Срок действия
			input.form-control#date(type='date' name='date' value=da)
		.form-group.ots
			label(for='key') ЕГРПОУ
			input.form-control#key(type='text' name='key' value=ke)
		.form-group.ots
			label(for='exec') Отв. исполнитель
			input.form-control#exec(list='execs' name='exec' value=ex)
			datalist#execs
				each el in exes
					option(value=el)
		.form-group.ots
			label(for='rm') Примечание
			input.form-control#rm(name='remark' value=rm)
		if scan
			.form-group.ots
				label(for='scan') Заменить скан
				input.form-control#scan(name='scan' type='file')
				br
				a.form-control.btn.btn-info(target='_blank' href='/'+scan) Просмотреть скан
		else
			.form-group.ots
				label(for='scan') Прикрепить скан
				input.form-control#scan(name='scan' type='file')
		
		input.form-control.btn.btn-success#addbtn(value='Сохранить' type='submit')