extends layouth

block content
	.h1.text-center Редактирование договора
	form.addForm(method='post' action='/rest/save' autocomplete='off')
		input(type='hidden' name='_id' value=_i)
		.form-group.ots
			label(for='branch') Отдел
			input.form-control#branch(list='branches' name='branch' value=br)
			datalist#branches
				each el in deps
					option(value=el)
		.form-group.ots
			label(for='partner_id') Номер контрагента
			input.form-control#partner_id(type='text' name='partner_id' value=id)
		.form-group.ots
			label(for='date1') Дата регистрации
			input.form-control#date1(type='date' name='reg' value=re)
		.form-group.ots
			label(for='date2') Дата заключения
			input.form-control#date2(type='date' name='close' value=cl)
		.form-group.ots
			label(for='partner') Контрагент
			input.form-control#partner(list='partners' name='partner' value=pa)
			datalist#partners
				each el in parts
					option(value=el)
		.form-group.ots
			label(for='theme') Предмет договора
			input.form-control#theme(type='text' name='theme' value=th)
		.form-group.ots
			label(for='amount') Сумма с ндс.
			input.form-control#amount(type='text' name='amount' value=am)
		.form-group.ots
			label(for='curr') Валюта
			input.form-control#curr(list='currs' name='curr' value=cu)
			datalist#currs
				option(value='UAH')
				option(value='USD')
				option(value='RUR')
				option(value='EUR')
		.form-group.ots
			label(for='date') Срок действия
			input.form-control#date(type='date' name='date' value=da)
		.form-group.ots
			label(for='key') ЕГРПОУ
			input.form-control#key(type='text' name='key' value=ke)
		.form-group.ots
			label(for='exec') Отв. исполнитель
			input.form-control#exec(list='execs' name='exec' value=ex)
			datalist#execs
				each el in exes
					option(value=el)
		.form-group.ots
			label(for='done') Примечание
			input.form-control#done(name='done' value=d)
		input.form-control.btn.btn-success#addbtn(value='Сохранить' type='submit')